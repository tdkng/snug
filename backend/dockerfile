# Use Java 24
FROM eclipse-temurin:24-jdk-alpine

# Set working directory
WORKDIR /app

# Copy pom.xml and download dependencies (for build cache optimization)
COPY pom.xml .
RUN mvn dependency:go-offline

# Copy the entire source and build
COPY . .
RUN mvn clean package -DskipTests

# Run the Spring Boot JAR (update target/*.jar with your actual JAR name)
CMD ["java", "-jar", "target/snug-backend-0.0.1-SNAPSHOT.jar"]

# Expose the port Spring Boot runs on
EXPOSE 8080

